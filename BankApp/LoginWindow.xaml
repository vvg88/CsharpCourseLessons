<Window x:Class="BankApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="170" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <GroupBox Header="Аутентификация сотрудника">
            <StackPanel>
                <TextBox Name="tbLoginEmployee" Height="30" Margin="5"/>
                <TextBox Name="tbPasswordEmployee" Height="30" Margin="5"/>
                <Button Content="Зайти" Name="btnEmploeeLogin" Click="btnEmploeeLogin_Click" Height="30" Margin="5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
